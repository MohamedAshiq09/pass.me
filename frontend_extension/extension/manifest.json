{
  "manifest_version": 3,
  "name": "Pass.me - Decentralized Password Manager",
  "version": "1.0.0",
  "description": "Secure, decentralized password manager powered by Sui blockchain and Walrus storage",
  "icons": {
    "16": "assets/icons/icon16.png",
    "48": "assets/icons/icon48.png",
    "128": "assets/icons/icon128.png"
  },
  "action": {
    "default_popup": "popup/index.html",
    "default_icon": {
      "16": "assets/icons/icon16.png",
      "48": "assets/icons/icon48.png",
      "128": "assets/icons/icon128.png"
    }
  },
  "background": {
    "service_worker": "background/index.js",
    "type": "module"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content/index.js"],
      "css": ["content/styles.css"],
      "run_at": "document_idle",
      "all_frames": false
    },
    {
      "matches": ["http://localhost:3000/callback*", "http://localhost:3000/callback/*"],
      "js": ["content/callback-handler.js"],
      "run_at": "document_start",
      "all_frames": false
    }
  ],
  "permissions": [
    "storage",
    "activeTab",
    "alarms",
    "notifications",
    "contextMenus",
    "identity"
  ],
  "host_permissions": [
    "https://fullnode.testnet.sui.io/*",
    "https://aggregator.walrus-testnet.walrus.space/*",
    "https://publisher.walrus-testnet.walrus.space/*",
    "https://api.enoki.mystenlabs.com/*",
    "https://accounts.google.com/*",
    "http://localhost:3001/*",
    "http://localhost:3000/*"
  ],
  "oauth2": {
    "client_id": "813263240218-srprog0t7485plr07i4sh0qoeec5evns.apps.googleusercontent.com",
    "scopes": ["openid", "email", "profile"]
  },
  "web_accessible_resources": [
    {
      "resources": ["assets/*", "popup/*"],
      "matches": ["<all_urls>"]
    }
  ],
  "content_security_policy": {
    "extension_pages": "script-src 'self' 'wasm-unsafe-eval'; object-src 'self'"
  }
}